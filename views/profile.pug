extends layout

block content
  .container
    h1 Profile

    form(method="POST")
      .form-group
        label Firstname
        input.form-control(name="firstname" type="text")
      .form-group
        label Lastname
        input.form-control(name="lastname" type="text")
      .form-group
        label Email
        input.form-control(name="email" type="email")
      button.btn.btn-primary(type="submit") Sign up